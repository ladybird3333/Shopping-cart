<!--Sprawdzam czy w koszyku są produkty-->
{{# if products}}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{# each products }}
                    <li class="list-group-item">
                        <span class="badge pull-left">{{this.quantity}} </span>&nbsp x
                        <strong>{{this.item.title}}</strong>
                        <span class="label label-info">{{this.item.price}} zł</span>
                        <div class="btn-group pull-right">
                            <a href="/delete/{{this.item._id}}"><i class="fa fa-trash-o fa-lg" aria-hidden="false" style="color: black" ></i></a>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>The value of your cart: {{totalPrice}} zł</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
{{else}}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2 style="text-align:center"><br>Your shopping cart is empty!</h2>
        </div>
    </div>
{{/if}}