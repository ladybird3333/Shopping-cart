{{# each products }}
    <div class="row">
<!--        przechodze przez kazdy produkt indywidualnie-->
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title}}</h3>
                        <p class="description">{{ this.description }}</p>
                        <div class="clearfix">
                            <div class="price pull-left">{{ this.price }} z≈Ç</div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" style="background-color: black" role="button">Buy</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}